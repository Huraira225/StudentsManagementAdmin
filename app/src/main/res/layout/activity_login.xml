<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_onboarding_screens"
    tools:context=".activities.LoginActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bg_rounded_border_corner"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Log In!"
            android:textColor="#000000"
            android:textSize="43dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_rounded_border_corner"
            android:drawableRight="@drawable/ic_icon_zocial_email"
            android:drawablePadding="8dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:padding="10dp"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="427dp" />

        <EditText
            android:id="@+id/editText_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_rounded_border_corner"
            android:drawableRight="@drawable/ic_icon_awesome_lock"
            android:drawablePadding="8dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="502dp" />

        <TextView
            android:id="@+id/textView_forgetpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:fontFamily=""
            android:text="Forgot password?"
            android:textColor="#000000"
            android:textSize="14dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_LogIn"
            android:layout_width="180dp"
            android:layout_height="44dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_login_rounded_button"
            android:text="login"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="605dp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>